<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.banking.controller.TransactionController"
      spacing="15" style="-fx-background-color: #f0f0f0;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Transaction History" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <font>
            <Font size="20"/>
        </font>
    </Label>
    
    <Separator/>
    
    <TableView fx:id="transactionTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="180"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="120"/>
            <TableColumn fx:id="amountColumn" text="Amount" prefWidth="120"/>
            <TableColumn fx:id="balanceAfterColumn" text="Balance After" prefWidth="120"/>
        </columns>
    </TableView>
    
    <Label text="All transactions are displayed in descending order (newest first)" 
           style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d;"/>
</VBox>

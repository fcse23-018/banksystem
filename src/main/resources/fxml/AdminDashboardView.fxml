<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.banking.controller.AdminController"
            style="-fx-background-color: #ecf0f1;">
    
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Admin Dashboard - PulaBank" style="-fx-text-fill: white; -fx-font-weight: bold;">
                <font>
                    <Font size="26"/>
                </font>
            </Label>
            <Label fx:id="adminNameLabel" text="Welcome, Administrator" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
        </VBox>
    </top>
    
    <left>
        <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 15;">
            <Label text="Admin Menu" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <Separator/>
            
            <VBox spacing="10">
                <Button fx:id="dashboardButton" text="Dashboard" onAction="#handleDashboard" 
                        maxWidth="Infinity" style="-fx-background-color: #34495e; -fx-text-fill: white;"/>
                <Button fx:id="customersButton" text="Manage Customers" onAction="#handleCustomers" 
                        maxWidth="Infinity" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                <Button fx:id="reportsButton" text="Reports" onAction="#handleReports" 
                        maxWidth="Infinity" style="-fx-background-color: #9b59b6; -fx-text-fill: white;"/>
                <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" 
                        maxWidth="Infinity" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </VBox>
        </VBox>
    </left>
    
    <center>
        <VBox style="-fx-padding: 30; -fx-background-color: white;" spacing="20">
            <BorderPane.margin>
                <Insets top="0" right="15" bottom="15" left="15"/>
            </BorderPane.margin>
            
            <Label text="System Statistics" style="-fx-font-weight: bold; -fx-font-size: 20px;"/>
            
            <GridPane hgap="20" vgap="15">
                <columnConstraints>
                    <ColumnConstraints minWidth="150" prefWidth="200"/>
                    <ColumnConstraints minWidth="100" prefWidth="150"/>
                </columnConstraints>
                
                <Label text="Total Customers:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 14px;"/>
                <Label fx:id="totalCustomersLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                
                <Label text="Total Accounts:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 14px;"/>
                <Label fx:id="totalAccountsLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2ecc71;"/>
                
                <Label text="Total Balance (BWP):" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-size: 14px;"/>
                <Label fx:id="totalBalanceLabel" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="2" 
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
            </GridPane>
            
            <Separator/>
            
            <Label text="Recent Activity" style="-fx-font-weight: bold; -fx-font-size: 18px;"/>
            <TextArea fx:id="activityArea" editable="false" wrapText="true" prefHeight="250" 
                      style="-fx-font-family: monospace;"/>
        </VBox>
    </center>
</BorderPane>

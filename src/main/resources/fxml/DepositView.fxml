<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.banking.controller.AccountController"
      alignment="CENTER" spacing="20" style="-fx-background-color: #f0f0f0;">
    <padding>
        <Insets top="40" right="50" bottom="40" left="50"/>
    </padding>
    
    <Label text="Deposit Funds" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <font>
            <Font size="22"/>
        </font>
    </Label>
    
    <Separator prefWidth="300"/>
    
    <GridPane hgap="10" vgap="15" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints minWidth="100" prefWidth="120"/>
            <ColumnConstraints minWidth="200" prefWidth="220"/>
        </columnConstraints>
        
        <Label text="Select Account:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="accountSelectComboBox" promptText="Choose account" 
                  prefWidth="220" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Amount (BWP):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="amountField" promptText="Enter deposit amount" 
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>
    
    <Label text="You can deposit to any account type" 
           style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
    
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="submitButton" text="Deposit" onAction="#handleDeposit" 
                prefWidth="120" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px;"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" 
                prefWidth="120" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px;"/>
    </HBox>
</VBox>
